{
  "name": "nestjs7-essencial",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "nest": "nest",
    "start": "nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --watch --debug",
    "check": "npm run lint && npm run test",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:debug": "node --inspect-brk node_modules/jest/bin/jest.js --run-in-band",
    "lint": "eslint \"{src,e2e}/**/*.ts\"",
    "lint:fix": "eslint \"{src,e2e}/**/*.ts\" --fix",
    "format": "prettier --check \"src/**/*.ts\" \"e2e/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"e2e/**/*.ts\"",
    "docs": "compodoc -p tsconfig.json src -d reports/documentation",
    "audit": "npm audit --production --json | npm run audit:html && npm run audit:check",
    "audit:html": "npm-audit-html --output reports/audit/index.html",
    "audit:check": "npm audit --production --audit-level critical",
    "swagger": "ts-node src/swagger.ts",
    "clean": "rimraf dist/ reports/",
    "serve": "npm run build && node dist/main.js",
    "e2e": "jest --config e2e/jest.config.js",
    "e2e:watch": "jest -c e2e/jest.config.js --watch",
    "e2e:debug": "node --inspect-brk node_modules/jest/bin/jest.js -c e2e/jest.config.js --run-in-band",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prebuild": "rimraf dist",
    "build": "nest build --webpack -p tsconfig.json",
    "prerelease": "npm version major && git push",
    "release": "docker build -f ci/docker/Dockerfile -t nestjs .",
    "deploy": "ansible-playbook ci/deploy/deploy-to-swarm.yaml"
  },
  "dependencies": {
    "@nestjs/common": "7.6.17",
    "@nestjs/core": "7.6.17",
    "@nestjs/platform-express": "7.6.17",
    "helmet": "4.6.0",
    "rxjs": "6.6.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/testing": "^7.6.17",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-html-reporters": "^2.1.6",
    "lint-staged": "^10.5.4",
    "npm-audit-html": "^1.5.0",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": ">=14.17.0",
    "npm": ">=6.14.13"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
